  journal   = {Advances in Human-Computer Interaction},
  keywords  = {*Algorithms, *Government, *Machine Learning, *Statistical Analysis, *Social Media, Government Policy Making, Machine Learning Algorithms, Digital Content Analysis, Big Data},
  publisher = {Hindawi Limited},
  refid     = {2021-33838-001},
